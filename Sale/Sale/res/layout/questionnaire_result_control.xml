<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:id="@+id/linearProduct"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>    

    <ScrollView
        android:id="@+id/scrollViewResult"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/linearResultContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="50px" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="推荐选择"
                    android:textColor="@color/plaint_text_color"
                    android:textSize="20sp" >
                </TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 >
            </ImageView>

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100px"
                android:layout_marginTop="50px"
                android:textColor="@color/plaint_text_color"
                android:textSize="22sp" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#88ffffff" >
            </LinearLayout>

            <TextView
                android:id="@+id/textViewMatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="50px"
                android:gravity="left"
                android:text="综合分析"
                android:textColor="@color/plaint_text_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textViewResultPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:textColor="@color/plaint_text_color"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewTotalValue"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="此产品对你非常适合"
                    android:textColor="@color/plaint_text_color"
                    android:textSize="18sp" />

                <FrameLayout
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right" >

                    <LinearLayout
                        android:id="@+id/linearTotalStars"
                        android:layout_width="250px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center_vertical|left" >

                        <ImageView
                            android:layout_width="250px"
                            android:layout_height="50px"
                            android:src="@drawable/star" >
                        </ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearTotalStarsEmpty"
                        android:layout_width="250px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center_vertical|left" >

                        <ImageView
                            android:layout_width="250px"
                            android:layout_height="50px"
                            android:src="@drawable/star_empty" >
                        </ImageView>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="100px"
                android:background="#88ffffff" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="50px" >

                <TextView
                    android:id="@+id/textViewResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="推荐理由"
                    android:textColor="@color/plaint_text_color"
                    android:textSize="20sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listViewMatches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="50px"
                android:background="#88ffffff" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50px"
                android:layout_marginTop="50px" >

                <TextView
                    android:id="@+id/textViewResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="专家点评"
                    android:textColor="@color/plaint_text_color"
                    android:textSize="20sp" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewEvaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/plaint_text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutResultButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="30px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewRestart"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:background="@drawable/button_empty_press_style_selector"
            android:gravity="center"
            android:paddingBottom="25px"
            android:paddingTop="25px"
            android:text="再测一次"
            android:textColor="@color/plaint_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewBuy"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:background="@drawable/button_press_style_selector"
            android:gravity="center"
            android:paddingBottom="25px"
            android:paddingLeft="0px"
            android:paddingRight="0px"
            android:paddingTop="25px"
            android:text="查看详情"
            android:textColor="@color/button_text_color"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/textViewBack"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:background="@drawable/button_empty_press_style_selector"
            android:gravity="center"
            android:paddingBottom="25px"
            android:paddingTop="25px"
            android:text="返回首页"
            android:textColor="@color/plaint_text_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>